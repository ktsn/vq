---
  extends: eslint:recommended
  env:
    es6: true
    commonjs: true
    browser: true
    jquery: true
  ecmaFeatures:
    arrowFunctions: true
    blockBindings: true
    classes: true
    defaultParams: true
    destructuring: true
    forOf: true
    generators: true
    objectLiteralComputedProperties: true,
    objectLiteralShorthandMethods: true,
    objectLiteralShorthandProperties: true,
    restParams: true
    spread: true
    templateStrings: true
    modules: true
  rules:
    dot-notation: 2
    eqeqeq: [2, smart]
    no-eval: 2
    no-use-before-define: [2, nofunc]
    radix: [1, as-needed]
    no-loop-func: 1
    no-multi-spaces: 1
    no-warning-comments: 1
    no-unused-vars: 1
    camelcase: [1, {properties: never}]
    indent: [1, 2]
    quotes: [1, single]
    semi: [2, always]
    strict: [2, global]
